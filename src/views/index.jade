extends templates/layout

block content
  .preloader.js-preloader
    .center-wrap
      .preloader__img
        img(src="images/preloader.png")
      .preloader__text Загрузка
  .screen
    .calendar.js-calendar
      .calendar__list.js-list
        .flip-back
        .flip-front
          .list__number.js-n 2
          .list__month Сентября
    .title-text.my Я календарь перевернул <span class="js-count"></span> <span class="js-count-word"></span>
    .title-text.small.all Все вместе календарь перевернули <span class="js-count"></span> <span class="js-count-word"></span> и снова третье сентября&hellip;
    .video-bg-holder.js-video
    video.video-bg(autoplay loop src="images/video.mp4")
    footer.footer
      a(href="https://itun.es/ru/sXfIq?i=277372354" target="_blank") Послушать 3-е сентября в iTunes
      a(href="http://vk.com/rovpeople" target="_blank") Послушать других ребят
